<section
  id="waitlist"
  class="relative flex flex-col items-center justify-center min-h-screen py-8 px-4 sm:py-12 md:py-20"
>
  <div class="absolute inset-0">
    <div class="absolute top-1/2 left-1/2 w-[90vw] h-[90vw] sm:w-[70vw] sm:h-[70vw] md:w-150 md:h-150 -translate-x-1/2 -translate-y-1/2 rounded-full bg-indigo-300/30 blur-[80px] sm:blur-[100px] md:blur-[120px]"></div>
  </div>

  <!-- Logo and Date -->
  <div class="text-center mb-6 sm:mb-8 z-10 w-full flex flex-col items-center px-4">
    <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-6 sm:mb-12">
      <a href="/" class="text-inherit no-underline hover:opacity-80 transition-opacity">
        PulseTrack
      </a>
    </h1>
    <div class="inline-flex items-center justify-center space-x-2 bg-gray-100 rounded-full px-3 sm:px-4 py-1.5 sm:py-2 text-xs sm:text-sm mb-3 sm:mb-4">
      <span class="w-1.5 h-1.5 sm:w-2 sm:h-2 bg-green-500 rounded-full"></span>
      <span class="text-gray-700">Lanzamiento el <b>30 de enero de 2026</b></span>
    </div>
  </div>

  <!-- Card -->
  <div class="relative z-10 w-full max-w-md sm:max-w-xl rounded-2xl sm:rounded-3xl bg-white/80 backdrop-blur-xl shadow-lg sm:shadow-xl px-5 sm:px-8 py-8 sm:py-10 mx-4">
    <h2 class="text-2xl sm:text-3xl font-semibold text-gray-900 text-center mb-2 sm:mb-3">
      Ãšnete a la lista de espera
    </h2>

    <p class="text-gray-500 text-sm sm:text-base text-center mb-5 sm:mb-6 px-2">
      RegÃ­strate para ser uno de los primeros en usar PulseTrack y obtener acceso anticipado.
    </p>

    <form
      id="waitlist-form"
      class="flex items-center gap-3 bg-gray-100 rounded-2xl p-2"
    >
      <input
        type="email"
        name="email"
        required
        placeholder="Ingresa tu correo electrÃ³nico..."
        class="flex-1 bg-transparent px-3 sm:px-4 py-2.5 sm:py-3 text-sm sm:text-base text-gray-900 placeholder-gray-400 focus:outline-none"
      />

      <button
        type="submit"
        class="shrink-0 inline-flex items-center gap-1 sm:gap-2 rounded-lg sm:rounded-xl bg-gray-900 px-4 sm:px-5 py-2.5 sm:py-3 text-xs sm:text-sm font-medium text-white hover:bg-gray-800 transition whitespace-nowrap"
      >
        <span class="hidden sm:inline">Unirme</span>
        <span>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 sm:h-5 sm:w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </span>
      </button>
    </form>

    <p id="message" class="text-sm mt-4 text-center"></p>
  </div>

  <div class="w-full flex justify-center mt-6 sm:mt-8 relative z-50 px-4">
    <a href="/" class="text-sm sm:text-base text-indigo-600 hover:text-indigo-800 px-3 sm:px-4 py-1.5 sm:py-2 rounded-lg bg-white/80 backdrop-blur-sm hover:bg-white transition-all inline-flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 sm:h-5 sm:w-5 mr-1.5 sm:mr-2 -mt-0.5 flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
      </svg>
      <span class="whitespace-nowrap">Regresar al inicio</span>
    </a>
  </div>
  
</section>


<script type="module">
  const form = document.getElementById("waitlist-form");
  const message = document.getElementById("message");

  form.addEventListener("submit", async (e) => {
    e.preventDefault();

    message.textContent = "Submitting...";

    const formData = new FormData(form);

    const payload = {
      email: formData.get("email"),
    };

    const res = await fetch("/api/waitlist", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(payload)
    });

    const data = await res.json();

    if (!res.ok) {
      message.textContent = data.error || "Something went wrong";
      message.className = "text-red-400";
      return;
    }

    form.reset();
    message.textContent = "You're on the list ðŸš€";
    message.className = "text-green-400";
  });
</script>
